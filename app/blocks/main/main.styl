.main
	background-color black

	&__wrap
		position absolute
		z-index 0
		top 0
		right 0
		left 0
		bottom 0

	&__video
		size 100%
		object-fit cover
		object-position center

	&__link-dirizher
		position absolute
		z-index 2
		top 24px
		left 50%
		size 90px
		background-image url('../images/button/dirizher.png')
		background-size 100%
		transform translateX(-50%)

		&:hover
			background-image url('../images/button/dirizher_hover.png')

	&__text
		position absolute
		z-index 3

		&_piano
			top 190px
			left 55px
			display flex
			align-items center
			justify-content center
			flex-direction column

		&_litavry
			top 190px
			left 190px

			& ^[0]__info
				position absolute
				right -15px
				bottom -25px

		&_woodwinds
			top 140px
			left 304px
			display flex
			align-items center
			justify-content center
			flex-direction column

		&_cooperwinds
			top 140px
			right 360px
			display flex
			align-items center
			justify-content center
			flex-direction column

		&_stringed-bow
			top 140px
			right 146px
			display flex
			align-items center
			justify-content center
			flex-direction column

			& ^[0]__info
				margin-right -20px

		&_arfa
			top 220px
			right 68px
			display flex
			align-items center
			justify-content center
			flex-direction column

	&__info
		display block
		size 20px
		background-image url('../images/button/info.png')
		background-size 100%

		&:hover
			background-image url('../images/button/info_hover.png')

	&__etno
		position absolute
		left 0
		bottom 44px
		padding-right 100px
		padding-left 148px
		display flex
		justify-content space-between
		width 100%
		opacity 0
		transform translateY(100%)
		transition transform .3s, opacity .3s

	&__link
		&_tabla
			width 137px
			height 141px

		&_duduk
			margin-top -42px
			margin-right -60px
			width 123px
			height 232px

		&_santoor
			margin-right -40px
			width 170px
			height 194px

		&_deedjereedoo
			margin-top 30px
			width 216px
			height 128px


	&__button
		position absolute
		left 50%
		bottom 0
		width 256px
		height 88px
		background-color transparent
		border none
		transform translateX(-50%)

	&__open
		size 100%
		background-image url('../images/button/callEtno.png')

		&:hover
			background-image url('../images/button/callEtno_hover.png')

	&__close
		size 100%
		display none
		background-image url('../images/button/vniz_etno.png')

		&:hover
			background-image url('../images/button/vnizEtno_hover.png')

	&_active &
		&__etno
			opacity 1
			transform translateY(0)

		&__button
			size 64px

		&__close
			display block

		&__open
			display none
