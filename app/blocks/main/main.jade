include /blocks/container/container
include /blocks/text/text

mixin main()
	+b.main.pages&attributes(attributes)&attributes({class: 'js-main'})
		+e.wrap-head.wrap
			//- +e('audio').audio.js-main-audio(autoplay loop)
				+e('source').source(src='assets/audio/main/main.mp3' type='audio/mpeg')
			+container.container_type_big
				+e('a').link-dirizher(href='conductor.html')
					+e.text-link
						+text._font_advent._color_white._size_small нажми для управления оркестром

				+e.text._piano
					+text._font_advent._type_main._color_dark._size_most-big Рояль
					+e('a').info(href='piano.html')

				+e.text._litavry
					+text._font_advent._type_main._color_dark._size_most-big Литавры
					+e('a').info(href='litavry.html')

				+e.text._woodwinds
					+text._font_advent._type_main._color_dark._size_most-big Деревянно-духовые
					+e('a').info(href='woodwinds.html')

				+e.text._cooperwinds
					+text._font_advent._type_main._color_dark._size_most-big Медно-духовые
					+e('a').info(href='cooperwinds.html')

				+e.text._stringed-bow
					+text._font_advent._type_main._color_dark._size_most-big Струнно-смычковые
					+e('a').info(href='stringed-bow.html')

				+e.text._arfa
					+text._font_advent._type_main._color_dark._size_most-big Арфа
					+e('a').info(href='arfa.html')

				+e.wrap
					+e('video').video.js-main-video(loop autoplay)
						+e('source').source(src='assets/video/main.mp4' type='video/mp4')

				+e.conductor
					+e('a').link._conductor(href='tabla.html')
						+e('img').image(src='assets/images/main/conductor.gif')

				+e.etno.js-main-etno
					+e('a').link._tabla(href='tabla.html')
						+e('img').image(src='assets/images/main/tabla.gif')

					+e('a').link._duduk(href='duduk.html')
						+e('img').image(src='assets/images/main/duduk.gif')

					+e('a').link._santoor(href='santoor.html')
						+e('img').image(src='assets/images/main/santoor.gif')

					+e('a').link._deedjereedoo(href='deedjeridoo.html')
						+e('img').image(src='assets/images/main/deedjereedoo.gif')

				+e('button').button.js-main-button(type='button')
					+e.open
					+e.close
