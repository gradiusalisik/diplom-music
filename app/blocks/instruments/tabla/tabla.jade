include /blocks/container/container
include /blocks/links-back/links-back
include /blocks/button/button
include /blocks/title/title
include /blocks/text/text
include /blocks/popup/popup

mixin tabla()
	+b.tabla.pages&attributes(attributes)
		+e('audio').audio.js-audio-layout(autoplay)
			+e('source').source(src='assets/audio/text/tabla.mp3' type='audio/mpeg')

		+e.wrap.wrap
			+container
				+e.wrapper
					+title.tabla__title Табла

					+text._size_small-big
						| Точно о происхождении табла неясно. Но по существующей традиции создание этого инструмента (как и многого другого, чье происхождение неизвестно) приписывают Амиру Хусро (XIII в.).

					+text._size_small-big
						| Большой барабан называется — байна, маленький — дайна.

				+e.image-wrap
					+e('img').image.js-image(src='assets/images/instruments/tabla.png' data-zoom='assets/images/instruments/tabla.png')
					+e.zoom.zoom.js-for-zoom-photo

				+e.links-back
					+links-back({href: 'main.html'})

				+e.wrap-buttons
					+e.button-video
						+button({type: 'video', popup: 'tabla'})
					+button({audio: 'assets/audio/instruments/Tabla.mp3'})

		+popup({id: 'tabla'})
