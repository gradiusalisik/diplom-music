.skripka-alt
	background-image url('../images/bg-instruments.jpg')
	background-size cover

	&__wrap-title
		display flex
		justify-content center

	&__title
		margin-bottom 10px
		text-align center

	&__title + &__title_small
		margin-x 25px
		text-transform none

	&__text
		width 633px

	&__image
		position absolute
		top 0
		right 10px
		width 206px
		height 568px

	&__footer
		position absolute
		left 0
		bottom 70px
		display flex
		justify-content space-between
		align-items flex-end
		width 100%

	&__button-video
		margin-bottom 30px
