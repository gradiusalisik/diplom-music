.duduk
	background-image url('../images/bg-instruments.jpg')
	background-size cover

	&__wrapper
		position relative

	&__title
		margin-bottom 10px
		text-align center

	&__image
		position absolute
		right -15px
		bottom -10px
		width 420px
		height 326px

	&__footer
		position absolute
		left 0
		bottom 70px
		display flex
		justify-content space-between
		align-items flex-end
		width 100%

	&__button-video
		margin-bottom 30px
