.arfa
	padding-top 35px
	overflow hidden
	background-image url('../images/bg-instruments.jpg')
	background-size cover

	&__wrapper
		max-width 460px

	&__link
		text-decoration none
		color #4ff1ff
		transition color .3s

		&:hover
			color rgba(#4ff1ff, .8)


	&__image
		position absolute
		right 26px
		bottom 35px
		width 346px
		height 616px

	&__footer
		position absolute
		left 0
		bottom 70px
		display flex
		justify-content space-between
		align-items flex-end
		width 100%

	&__button-video
		margin-right -100px
