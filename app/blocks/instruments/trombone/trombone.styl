.trombone
	&__wrap
		background-image url('../images/bg-instruments.jpg')
		background-size cover

	&__wrap-title
		display flex
		justify-content center

	&__wrapper
		display flex
		justify-content space-between

	&__content-title
		display flex

	&__empty
		margin-right 40px
		width 542px

	&__title
		margin-bottom 10px

	&__image-wrap
		position relative
		margin-right 40px
		flex 0 0 auto
		width 542px
		height 282px

	&__image
		size 100%

	&__footer
		position absolute
		left 0
		bottom 35px
		display flex
		justify-content space-between
		align-items flex-end
		width 100%

	&__wrap-buttons
		display flex

	&__button-video
		margin-right 30px
