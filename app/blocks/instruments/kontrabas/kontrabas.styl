.kontrabas
	&__wrap
		background-image url('../images/bg-instruments.jpg')
		background-size cover

	&__wrapper
		position relative
		z-index 2
		display flex
		justify-content space-between

	&__title
		margin-bottom 10px

	&__image-wrap
		position relative
		flex 0 0 auto
		width 360px
		height 548px

	&__image
		size 100%

	&__footer
		position absolute
		z-index 3
		left 0
		bottom 35px
		margin-top 20px
		padding-right 50px
		display flex
		flex-direction column-reverse
		width 500px

	&__wrap-buttons
		display flex
		align-self flex-start

	&__button-video
		margin-right 30px
