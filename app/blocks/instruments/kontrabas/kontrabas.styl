.kontrabas
	&__wrap
		background-image url('../images/bg-instruments.jpg')
		background-size cover

	&__wrapper
		position relative
		z-index 2

	&__title
		margin-bottom 10px
		text-align center

	&__text
		width 516px

	&__image-wrap
		position absolute
		z-index 3
		top 22px
		right -22px
		width 360px
		height 548px

	&__image
		size 100%

	&__footer
		margin-top 20px
		padding-right 50px
		display flex
		justify-content space-between
		align-items flex-end
		width 500px
		height 150px

	&__wrap-buttons
		display flex
		align-self flex-start

	&__button-video
		margin-right 30px
