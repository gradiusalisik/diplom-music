.truba
	&__wrap
		background-image url('../images/bg-instruments.jpg')
		background-size cover

	&__wrap-title
		display flex
		justify-content center

	&__title
		margin-bottom 10px
		text-align center

	&__text
		&_right
			text-align right

	&__image-wrap
		position absolute
		top -32px
		left -32px
		width 460px
		height 358px

	&__image
		size 100%

	&__footer
		position absolute
		left 0
		bottom 35px
		display flex
		justify-content space-between
		flex-direction column-reverse
		width 100%

	&__button-audio
		margin-bottom 90px
