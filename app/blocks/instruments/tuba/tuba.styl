.tuba
	&__wrap
		background-image url('../images/bg-instruments.jpg')
		background-size cover

	&__wrap-title
		display flex
		justify-content center

	&__wrapper
		display flex
		justify-content space-between

	&__title
		margin-bottom 25px

	&__content-title
		display flex

	&__empty
		margin-right 30px
		width 317px

	&__wrap-image
		position relative
		flex 0 0 auto

	&__content-text
		width 100%

	&__image-wrap
		margin-right 30px
		display block
		&_first
			margin-bottom 25px
			width 301px
			height 187px

		&_second
			width 317px
			height 185px

	&__image
		size 100%

	&__footer
		position absolute
		left 0
		bottom 35px
		display flex
		justify-content space-between
		align-items flex-end
		width 100%
