include /blocks/container/container
include /blocks/links-back/links-back
include /blocks/button/button
include /blocks/title/title
include /blocks/text/text
include /blocks/popup/popup

mixin santoor()
	+b.santoor.pages&attributes(attributes)
		+e('audio').audio.js-audio-layout(autoplay)
			+e('source').source(src='assets/audio/text/santur.mp3' type='audio/mpeg')

		+e.wrap.wrap
			+container
				+e.wrapper
					+title.santoor__title Сантур

					+e.image-wrap
						+e('img').image.js-image(src='assets/images/instruments/santoor.png' data-zoom='assets/images/instruments/santoor.png')
						+e.zoom.zoom.js-for-zoom-photo

					+e('a').info(href='santoor-info.html')

				+e.footer
					+links-back({href: 'main.html'})

					+e.wrap-buttons
						+e.button-video
							+button({type: 'video', popup: 'santoor'})
						+button({audio: 'assets/audio/instruments/Santur.mp3'})

		+popup({id: 'santoor'})
