.valtorna
	&__wrap
		background-image url('../images/bg-instruments.jpg')
		background-size cover

	&__title
		margin-bottom 60px

	&__wrapper
		display flex
		justify-content space-between

	&__content-title
		display flex

	&__wrap-image
		position relative
		margin-right 40px
		display flex
		justify-content center
		align-items center
		flex 0 0 auto

	&__empty
		margin-right 40px
		width 360px

	&__image-wrap
		width 360px
		height 254px

	&__image
		size 100%

	&__text
		width 100%

	&__footer
		position absolute
		left 0
		bottom 35px
		display flex
		justify-content space-between
		align-items flex-end
		width 100%
