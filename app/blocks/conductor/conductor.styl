.conductor
	background-color black

	&__wrap
		position absolute
		z-index 0
		top 0
		right 0
		left 0
		bottom 0

	&__title
		position absolute
		z-index 1
		top 70px
		left 0
		width 100%
		text-align center

	&__video
		size 100%
		object-fit cover
		object-position center


	&__instrument
		position absolute
		width 370px
		height 290px
		cursor pointer
		background-size 100%
		transition filter .3s

		&:hover
			filter drop-shadow(6px 6px 15px white)

		&_piano
			z-index 2
			top 250px
			left -16px
			background-image url('../images/conductor/simfo/pianoON.gif')
			background-repeat no-repeat

			&.active
				background-image url('../images/conductor/simfo/pianoOFF.png')

		&_litavry
