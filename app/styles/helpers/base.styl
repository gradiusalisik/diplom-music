.pages
	display flex
	justify-content center
	align-items center
	overflow hidden
	height 100vh
	background-color #000

.wrap
	position relative
	padding-top 32px
	width 1280px
	height 720px
	overflow hidden
	background-position center
	background-repeat no-repeat

.zoom
	max-width 400px
	width 100%
	max-height 400px
	height 100%

.content-scroll
	position relative
	overflow hidden
	width 100%
	height 450px

.content-text
	position absolute
	right -20px
	padding-right 20px
	height 100%
	overflow-x hidden
	overflow-y auto
